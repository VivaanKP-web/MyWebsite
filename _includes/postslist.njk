<style>
  .post-preview {
    background-color: #212529;
    padding: 1.5rem;
    border-radius: 8px;
    margin-bottom: 1.5rem;
    transition: transform 0.3s ease, box-shadow 0.3s ease;
  }

  .post-preview:hover {
    transform: translateY(-5px);
    box-shadow: 0 8px 15px rgba(0, 0, 0, 0.2);
  }

  .post-preview a {
    color: #ffc107;
    text-decoration: none;
  }

  .post-preview a:hover {
    color: #f8f9fa;
    text-decoration: underline;
  }

  .post-meta {
    color: #adb5bd;
    font-size: 0.9rem;
  }
</style>

{% for s in postslist | reverse %}
<div class="post-preview">
  <a href="{{s.url}}">
    <h2 class="post-title">{{s.data.title}}</h2>
  </a>
  {% if s.data.description %}
    <h3 class="post-subtitle">{{s.data.description}}</h3>
  {% endif %}
  <p class="post-meta">
    Posted by <a href="{{metadata.author.url}}">{{metadata.author.name}}</a>
    on {{s.date| readableDate}}
  </p>
</div>
<hr class="my-4" />
{%- endfor -%}

